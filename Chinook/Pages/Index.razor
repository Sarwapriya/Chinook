@page "/"
@attribute [Authorize]

<PageTitle>Index</PageTitle>

<h1>Artists</h1>

@if (Artists == null)
{
    <Loading />
}
else
{
    <p>
        @*@using (Microsoft.AspNetCore.Html.BeginForm("GetValue", "Home"))
        {

            <input id="Text1" type="text" name="txtOne" />
            <input id="Button1" type="submit" value="button" />
        }
        Artist Name: <input id="serchTestBox" type="text" name="SearchString" @onchange="GetArtistByName(valu)">
        <button class="btn btn-success" @onclick="GetArtistByName(serchTestBox)">Search</button>*@
    </p>
    <table class="table table-striped table-hover table-sm">
        <thead>
            <tr>
                <th>Name</th>
                <th>Number of albums</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var artist in Artists)
            {
                <tr>
                    <td><a href="Artist/@artist.ArtistId">@artist.Name</a></td>
                    <td>@artist.Albums.Count()</td>
                </tr>
            }
        </tbody>
    </table>
}

